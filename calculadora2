def calculadora():
    while True:      
        print("1: Soma")
        print("2: Subtração")
        print("3: Multiplicação")
        print("4: Divisão")
        print("0: Sair")
        
        opcao = int(input("Digite o número para a operação que deseja fazer: "))
        
        if opcao == 0:
            break
        elif opcao == 1:
            num1 = float(input("Digite o primeiro valor: "))
            num2 = float(input("Digite o segundo valor: "))
            resultado = num1 + num2
            print("Resultado: ", resultado)
        elif opcao == 2:
            num1 = float(input("Digite o primeiro valor: "))
            num2 = float(input("Digite o segundo valor: "))
            resultado = num1 - num2
            print("Resultado: ", resultado)
        elif opcao == 3:
            num1 = float(input("Digite o primeiro valor: "))
            num2 = float(input("Digite o segundo valor: "))
            resultado = num1 * num2
            print("Resultado: ", resultado)
        elif opcao == 4:
            num1 = float(input("Digite o primeiro valor: "))
            num2 = float(input("Digite o segundo valor: "))
            if num2 == 0:
                print("Não é possível dividir por zero.")
            else:
                resultado = num1 / num2
                print("Resultado: ", resultado)
        else:
            print("Essa opção não existe.")
         
            
calculadora()
